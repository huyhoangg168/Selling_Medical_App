<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- Always include this permission -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Include only if your app benefits from precise location access. -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

<!--    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" tools:node="remove"/>-->
    <application
        android:name=".activity.MyApplication"
        android:allowBackup="false"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_medical_app"
        android:label="Medicare"
        android:roundIcon="@drawable/logo_medical_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClientSellingMedicine"
        android:testOnly="false"
        tools:targetApi="31">
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.authAndAccount.RegisterActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".activity.authAndAccount.OtpConfirmActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".activity.productAndPayment.CartActivity"
            android:exported="false">

        </activity>
        <activity
            android:name=".activity.productAndPayment.DetailProductActivity"
            android:exported="false">

        </activity>
        <activity
            android:name=".activity.notificationAndNews.DetailNotificationActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.authAndAccount.LoginActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.notificationAndNews.NotificationActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.adress.RegisteredAddressActivity"
            android:launchMode="singleTop"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.adress.AddAddressActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.notificationAndNews.HealthyNewsDetailActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.productAndPayment.PaymentActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.order.OrderDetailActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.coupon.RewardPointsHistoryActvity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.productAndPayment.ProductActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.authAndAccount.IndividualActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.authAndAccount.AdminProductActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.productAndPayment.AddProductActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.order.AdminApproveOrderActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.order.AdminDashboardActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.authAndAccount.EditProfileActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.productAndPayment.MomoPaymentResultActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="medimate"
                    android:host="online-payment-completed"
                    android:pathPrefix="/momo"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="medimate"
                    android:host="online-payment-completed"
                    android:pathPrefix="/zalopay"/>
            </intent-filter>
        </activity>
        <service
            android:name=".service.MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>


</manifest>